{
  "name": "cagetools",
  "version": "0.0.1",
  "description": "CageTools - A universal coding agent CLI wrapper",
  "author": "",
  "license": "MIT",
  "type": "module",
  "bin": {
    "cagetools": "./dist/cli.js",
    "cage": "./dist/cli.js"
  },
  "scripts": {
    "dev": "vite-node src/cli.ts",
    "dev:watch": "vite-node --watch src/cli.ts",
    "build": "vite build",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "mcp:import": "node scripts/import-mcp-config.js",
    "mcp:setup": "npm run mcp:import",
    "postinstall": "npm run setup:hooks && patch-package",
    "setup:hooks": "cd .claude/hooks/cli-app && npm install && chmod +x quality-check.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@modelcontextprotocol/server-filesystem": "^2025.3.28",
    "ansi-escapes": "^7.1.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "inquirer": "^12.9.4",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.61.0",
    "@swc-node/register": "^1.10.10",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/inquirer": "^9.0.7",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^22.18.1",
    "@types/ora": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "nodemon": "^3.1.10",
    "ora": "^8.2.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.6.0",
    "tsx": "^4.20.5",
    "typescript": "~5.7.2",
    "unplugin-swc": "^1.5.5",
    "vite": "^6.3.6",
    "vite-node": "^3.2.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
